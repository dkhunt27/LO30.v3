@model List<LO30.Web.Client.Models.TeamFeedModel>

@{
  ViewBag.Title = "LO30 | Schedule";
}

<div id="wrapper">
  <div class="row">
    <header class="page-title">
      <h4 class="col-md-12">@ViewData["SeasonName"] Schedule</h4>
    </header>
  </div>

  <div class="table-responsive">
    <table class="table table-condensed">
      <tr>
        <td>
          <b><span style="font-size: large">Team Game Schedule Feeds</span></b>
          <br />
          <div>Please use the following feed to subscribe to your team's calendar. <b>Feeds have been updated to include playoff schedule.</b></div>
          <br />
          <div>
            <b>Phones</b>
            <br />
            Navigate to this page on your phone and click the Feed link next to your team's name.
          </div>
          <br />
          <br />
          <div>
            <b>Other Applications</b>
            <br />
            You can copy and paste the long URL next to your team's name into any calendar product that supports the iCal format.
            <br />
            <em>Looking for an application that supports iCalendar feeds? Try <a href="http://www.google.com/calendar" target="_blank">Google Calendar</a>.</em>
          </div>
          <br>

          <dl class="dl-horizontal">
            @foreach (var teamFeed in Model)
            {
              <dt>@teamFeed.TeamNameShort</dt>
                      <dd>
                        <a href="webcal://@teamFeed.TeamFeedUrl">iPhone</a>&nbsp;&nbsp;&nbsp;&nbsp;
                        <a href="http://@teamFeed.TeamFeedUrl">Non-iPhone</a><br />
                        @teamFeed.TeamFeedUrl
                      </dd>
            }
          </dl>
          <div><em><small>&nbsp;&nbsp;If you find any descrepencies with the calendar feeds or if you are having trouble subscribing to a feed, pleace contact Dan Hunt and let him know</small></em></div>
          <br>
        </td>
      </tr>
      <tr>
        <td>
          <b><span style="font-size: large">League Schedule</span></b>
          <br />
          <dl class="dl-horizontal">
            <dt>Regular Season PDF</dt>
            <dd><a href="@Url.Content("~/Content/Schedules/2015-16/Lo30 Schedule 2015-16.v3.pdf")">LO30 Schedule 2015-16.pdf</a></dd>
          </dl>
          <dl class="dl-horizontal">
            <dt>Playoffs PDF</dt>
            <dd><a href="@Url.Content("~/Content/Schedules/2015-16/Lo30 Schedule 2015-16-Playoffs.v8.pdf")">LO30 Schedule 2015-16 Playoffs.pdf</a></dd>
          </dl>
        </td>
      </tr>
    </table>
  </div>
</div>
