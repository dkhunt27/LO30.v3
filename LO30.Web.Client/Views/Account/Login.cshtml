@model LO30.Models.LoginModel

@{
  ViewBag.Title = "Log in";
}

<hgroup class="title">
  <h1>@ViewBag.Title.</h1>
</hgroup>


<section id="loginForm">
  <div class="row">

    <!-- LOGIN -->
    <div class="col-md-6">

      <h2>Sign <strong>In</strong></h2>

      @*<form class="white-row" method="post" action="#">*@
      @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "white-row" }))
      {
        @Html.AntiForgeryToken()


        if (!@Html.ViewData.ModelState.IsValidField("UserName"))
        {
          <div class="alert alert-danger">
            <i class="fa fa-frown-o"></i>
            @Html.ValidationMessageFor(m => m.UserName)
          </div>
        }
        if (!@Html.ViewData.ModelState.IsValidField("Password"))
        {
          <div class="alert alert-danger">
            <i class="fa fa-frown-o"></i>
            @Html.ValidationMessageFor(m => m.Password)
          </div>
        }

        <div class="row">
          <div class="form-group">
            <div class="col-md-12">
              <label>Username</label>
              @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
            </div>
          </div>
        </div>
        <div class="row">
          <div class="form-group">
            <div class="col-md-12">
              <label>Password</label>
              @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <span class="remember-box checkbox">
              <label for="rememberme">
                @Html.CheckBoxFor(m => m.RememberMe)
                Remember Me
              </label>
            </span>
          </div>
          <div class="col-md-6">
            <input type="submit" value="Sign In" class="btn btn-primary pull-right" data-loading-text="Loading...">
          </div>
        </div>
      }
    </div>
